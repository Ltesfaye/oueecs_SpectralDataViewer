<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/fragment_user_input">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are not currently connected to a device. Press the Bluetooth icon in the top right corner to search for available devices."
        android:textSize="30sp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:id="@+id/textview"
        android:padding="10dp"
        android:layout_marginTop="100dp"/>

    <EditText
        android:id="@+id/test_edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textview"
        android:layout_centerHorizontal="true"
        android:hint="Test"
        android:inputType="number"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_edit_text"
        android:layout_centerHorizontal="true"
        android:text="Test Send"
        android:visibility="invisible" />



</RelativeLayout>